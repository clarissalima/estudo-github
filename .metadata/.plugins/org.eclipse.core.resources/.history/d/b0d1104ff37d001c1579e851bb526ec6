				System.out.print("Id already taken. Try again: ");
				id = sc.nextInt();
			}

			System.out.print("Name: ");
			sc.nextLine();
			String name = sc.nextLine();

			sc.close();

		}
	}

	private static boolean hasId(Object list, int id) {
		return false;
	}

}